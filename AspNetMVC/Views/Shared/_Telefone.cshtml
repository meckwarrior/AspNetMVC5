@model IList<AspNetMVC.ViewModels.TelefoneViewModel>

<div>
    @for (int i = 0; i < Model.Count(); i++)
    {
        <h4>Telefone @Html.Label((1 + i).ToString())</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model[i].Numero)
            </dt>

            <dd>
                @Html.DisplayFor(model => model[i].Numero)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model[i].EhFixo)
            </dt>

            <dd>
                @Html.DisplayFor(model => model[i].EhFixo)
            </dd>
        </dl>
    }
</div>
