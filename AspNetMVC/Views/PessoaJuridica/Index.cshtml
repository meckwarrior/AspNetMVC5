@model IEnumerable<AspNetMVC.ViewModels.PessoaJuridicaViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Pessoas Jurídicas</h2>

<p>
    @Html.ActionLink("Novo Cadastro", "Create", null, new { @class = "btn btn-lg btn-success" })
</p>

@using (Html.BeginForm())
{
    <div class="panel-group">
        <div class="panel panel-info panel-body">
            @Html.Label("CNPJ:", new { @class = "sr-only", @for = "CNPJ" })
            <div class="col-md-2">
                @Html.TextBox("CNPJ", "", new { @class = "form-control", @maxlength = "14", @placeholder = "CNPJ:" })
            </div>
            <div class="col-md-1">
            </div>
            @Html.Label("Razão Social:", new { @class = "sr-only", @for = "RazaoSocial" })
            <div class="col-md-3">
                @Html.TextBox("RazaoSocial", "", new { @class = "form-control", @placeholder = "Razão Social:" })
            </div>
            <div class="col-md-1">
            </div>
            @Html.Label("Nome Fantasia:", new { @class = "sr-only", @for = "NomeFantasia" })
            <div class="col-md-3">
                @Html.TextBox("NomeFantasia", "", new { @class = "form-control", @placeholder = "Nome Fantasia:" })
            </div>
            <div class="col-md-1">
                <input type="submit" value="Filtrar" class="btn btn-primary" />
            </div>
            <div class="col-md-1">
                @Html.ActionLink("Limpar", "Index", "", new { @class = "btn btn-default" })
            </div>
        </div>
        </div>
}

<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CNPJ)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RazaoSocial)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NomeFantasia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CNPJMascarado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RazaoSocial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeFantasia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td align="right">
                @Html.ActionLink("Editar", "Edit", new { id = item.PessoaId }, new { @class = "btn btn-warning" }) |
                @Html.ActionLink("Detalhes", "Details", new { id = item.PessoaId }, new { @class = "btn btn-info" }) |
                @Html.ActionLink("Apagar", "Delete", new { id = item.PessoaId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
